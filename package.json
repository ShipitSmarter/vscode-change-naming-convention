{
  "name": "vscode-change-naming-convention",
  "displayName": "Change Naming Convention",
  "description": "Easily change between PascalCase and camelCase keys in YAML and JSON files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/**.json",
		"workspaceContains:**/**.yml",
		"workspaceContains:**/**.yaml",
		"onCommand:vscode-change-naming-convention.rightClickJsonCamel",
		"onCommand:vscode-change-naming-convention.rightClickYamlPascal",
    "onLanguage:json",
		"onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
				"command": "vscode-change-naming-convention.rightClickJsonCamel",
				"title": "Convert to camelCase",
				"enablement": "resourceExtname == .json"
			},
      {
				"command": "vscode-change-naming-convention.rightClickJsonPascal",
				"title": "Convert to PascalCase",
				"enablement": "resourceExtname == .json"
			},
      {
				"command": "vscode-change-naming-convention.rightClickYamlPascal",
				"title": "Convert to PascalCase",
				"enablement": "resourceExtname == .yml || resourceExtname == .yaml"
			},
      {
				"command": "vscode-change-naming-convention.rightClickYamlCamel",
				"title": "Convert to camelCase",
				"enablement": "resourceExtname == .yml || resourceExtname == .yaml"
			},
      {
        "command": "vscode-change-naming-convention.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "menus": {
    "commandPalette": [
      {
        "command": "vscode-change-naming-convention.rightClickJsonCamel",
        "when": "resourceExtname == .json"
      },
      {
        "command": "vscode-change-naming-convention.rightClickYamlPascal",
        "when": "resourceExtname == .yml || resourceExtname == .yaml"
      },
      {
        "command": "vscode-change-naming-convention.rightClickJsonPascal",
        "when": "resourceExtname == .json"
      },
      {
        "command": "vscode-change-naming-convention.rightClickYamlCamel",
        "when": "resourceExtname == .yml || resourceExtname == .yaml"
      }
    ],
    "explorer/context": [
      {
        "group": "2_changecase",
        "command": "vscode-change-naming-convention.rightClickJsonCamel",
        "when": "resourceExtname == .json"
      },
    
      {
        "group": "2_changecase",
        "command": "vscode-change-naming-convention.rightClickYamlPascal",
        "when": "resourceExtname == .yml || resourceExtname == .yaml"
      },
      {
        "group": "2_changecase",
        "command": "vscode-change-naming-convention.rightClickJsonPascal",
        "when": "resourceExtname == .json"
      },
    
      {
        "group": "2_changecase",
        "command": "vscode-change-naming-convention.rightClickYamlCamel",
        "when": "resourceExtname == .yml || resourceExtname == .yaml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "ts-loader": "^9.4.2",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "@vscode/test-electron": "^2.3.0"
  },
  "dependencies": {
		"yaml": "2.2.1"
	}
}
